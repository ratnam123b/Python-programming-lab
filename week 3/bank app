def credit(bal,val):
    bal=bal+val
    return bal
    
def debit(bal,val):
    bal=bal-val
    return bal
    
def show_bal(bal):
    print("current bank balance:",bal)
    
    
    
    
bal=int(input("enter the amount:"))
val=int(input("enter the amount to be credited or debited:"))
sys=int(input("press 1 if you want to credit money\npress 2 to debit money:"))
if(sys==1):
        balance=credit(bal,val)
        show_bal(balance)
if(sys==2):
        balance=debit(bal,val)
        show_bal(balance)
